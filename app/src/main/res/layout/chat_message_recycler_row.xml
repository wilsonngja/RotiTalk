<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    >

    <LinearLayout
        android:id="@+id/incomingMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@drawable/chat_message_background"
        android:backgroundTint="@color/secondary_caution"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="120dp"
        android:maxWidth="200dp">

        <TextView
            android:id="@+id/incomingMessageName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/incomingMessageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello How are you? " />
    </LinearLayout>




    <LinearLayout
        android:id="@+id/outgoingMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:padding="8dp"
        android:background="@drawable/chat_message_background"
        android:backgroundTint="@color/purple_200"
        android:layout_marginStart="120dp">


        <TextView
            android:id="@+id/outgoingMessageName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            />

        <TextView
            android:id="@+id/outgoingMessageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I am fine. Thanks for asking"
            />
    </LinearLayout>
</RelativeLayout>